{
  "name": "ament-linter",
  "displayName": "ament-linter",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:cpp",
    "onLanguage:python",
    "onLanguage:cmake",
    "onLanguage:xml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
        { "id": "cpp", "aliases": ["C++"], "extensions": [".cpp", ".h", ".hpp"] },
        { "id": "python", "aliases": ["Python"], "extensions": [".py"] }
    ]
  },
  "properties": {
    "amentLinter.enable": {
      "type": "boolean",
      "default": true,
      "description": "Enable or disable the Ament Linter extension."
    },
    "amentLinter.tools": {
      "type": "object",
      "default": {
        "ament_cpplint": true,
        "ament_cppcheck": true,
        "ament_uncrustify": true,
        "ament_copyright": true,
        "ament_flake8": true,
        "ament_pep257": true,
        "ament_xmllint": true,
        "ament_lint_cmake": true
      },
      "description": "Enable or disable specific ament linters."
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
